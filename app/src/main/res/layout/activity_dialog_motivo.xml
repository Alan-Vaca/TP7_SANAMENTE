<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CCCCCC"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextMotivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:editable="false"
        android:enabled="false"
        android:gravity="center|center_horizontal|center_vertical"
        android:hint="Motivo de la cancelacion"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelarMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/button_cancelar"
            android:textColorHighlight="#D11111"
            android:textColorLink="#D11111"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnGuardarMotivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/button_guardar"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>