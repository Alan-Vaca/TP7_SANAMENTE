<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="MENSAJE A MOSTRAR"
        android:inputType="none"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelarMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_cancelar" />

        <Button
            android:id="@+id/btnConfirmarMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_confirmar"
            android:textColorHighlight="#FF6750A4" />
    </LinearLayout>
</LinearLayout>